{
    "compilerOptions": {
        "target": "es2015",
        "moduleResolution": "node",
        "strict": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": false,
        "jsx": "react"
    },
    "typeRoots": [
        "./lib/types",
        "./node_modules/@types"
    ],
    "exclude": [
        "node_modules",
        "typings"
    ],
    "include": ["./lib/**/*.ts"]
}